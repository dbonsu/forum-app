<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="forumApp">
    <div class="navbar navbar-inverse navbar-fixed-top forum-header">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div>
            </div>
            <div id="header-links" class="navbar-collapse collapse" ng-controller="HomeController as vm">
                <ul class="nav navbar-nav">
                    <li> <a ui-sref="home">Home</a></li>
                    <li> <a ui-sref="forum">Forum</a></li>
                    <li ng-hide="vm.isAuthenticated" class="btn btn-default" >
                        
                        <a ui-sref="login">Login</a>
                    </li>
                    <li ng-hide="!vm.isAuthenticated" ><button type="submit" ng-click="vm.logout()" class="btn btn-default">Log Out</button> 
                    </li>
                </ul>
            </div>
        </div>
    </div>
   
    <div class="container body-content">

        @RenderBody()

        <footer class="navbar navbar-fixed-bottom text-center forum-footer">
            <p>&copy; @DateTime.Now.Year - Your Forum</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundle/forum")*@
    @Scripts.Render("~/bundles/angularVendor");
    @Scripts.Render("~/bundles/angularForum");

    @RenderSection("scripts", required: false)
</body>
</html>